# define our source to loook for gems
source "https://rubygems.org"

# declare the sinatra dependency
gem 'sinatra'
gem 'sinatra-flash'
gem 'data_mapper'
gem 'dm-postgres-adapter'
gem 'database_cleaner'
gem 'bcrypt-ruby'

# setup our test group and require rspec
group :test do
  gem "rspec"
  gem 'launchy'
  gem 'capybara'
end

